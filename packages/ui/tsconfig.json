{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@jumpwind/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "moduleResolution": "bundler",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "vite.config.ts",
    "vitest.config.ts",
    "tsdown.config.ts"
  ]
}
