{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@jumpwind/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@jumpwind/ui/*": ["./src/*"],
      "@jumpwind/ui": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}
